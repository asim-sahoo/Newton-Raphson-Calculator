<FirstPage>
    f_in:f_in
    a_in:a_in
    slide:slide
    name: "first"
    Image:
        source: "bg.png"
        size_hint: 1, 1
        pos_hint: {"center_x": .5, "center_y": .5}
        allow_stretch: True
        keep_ratio: False
    MDCard:
        size_hint: (.42,.765)
        pos_hint: {"center_x": .685, "center_y": .5}
        md_bg_color: 44/255,41/255,68/255,255/255
        elevation: 2
        radius: [40,40,40,40]
    MDCard:
        size_hint: (.36,.2)
        pos_hint: {"center_x": .685, "center_y": .25}
        md_bg_color: 58/255,62/255,99/255,255/255
        elevation: 2
        radius: [40,40,40,40]
        BoxLayout:
            orientation: 'vertical'
            padding: 10, 10
            row_force_default: True
            ScrollView:
                size: self.size
                GridLayout:
                    size: root.width * 0.1, root.height * 0.1
                    size_hint_y: None
                    cols: 1
                    MDLabel:
                        id: output
                        font_name: "SPoppins"
                        font_size: "15sp"
                        color: rgba(255,255,255,255)
                        
    MDLabel:
        text: "Newton"
        font_name: "MPoppins"
        font_size: "67sp"
        pos_hint: {"center_x": .15, "center_y": .7}
        halign: "center"
        color: 1,1,1,1  
    MDLabel:
        text: "Raphson"
        font_name: "MPoppins"
        font_size: "67sp"
        pos_hint: {"center_x": .163, "center_y": .6}
        halign: "center"
        color: 1,1,1,1
    MDLabel:
        text: "Calculator"
        font_name: "MPoppins"
        font_size: "67sp"
        pos_hint: {"center_x": .183, "center_y": .5}
        halign: "center"
        color: 1,1,1,1 
    MDLabel:
        text: "A calculator to solve any"
        font_name: "LPoppins"
        font_size: "28sp"
        pos_hint: {"center_x": .18, "center_y": .38}
        halign: "center"
        color: 1,1,1,1
    MDLabel:
        text: "arithmatic or transdental"
        font_name: "LPoppins"
        font_size: "28sp"
        pos_hint: {"center_x": .18, "center_y": .335}
        halign: "center"
        color: 1,1,1,1
    MDLabel:
        text: "equation"
        font_name: "LPoppins"
        font_size: "28sp"
        pos_hint: {"center_x": .107, "center_y": .29}
        halign: "center"
        color: 1,1,1,1
    MDSlider:
        id:slide
        color: 90/255,45/255,148/255,255/255
        thumb_color_active: 90/255,45/255,148/255,255/255
        thumb_color_inactive: 90/255,45/255,148/255,255/255
        track_color_active: 1,1,1,1
        track_color_inactive: 1,1,1,1
        hint: True
        hint_bg_color: 224/255, 219/255, 222/255, 1
        hint_text_color:rgba(140,82,255,255)
        size_hint_x: 0.376
        size_hint_y: 0.1
        pos_hint: {"center_x": .685, "center_y": .485}
        min: 0
        max: 5
        step: 1
        on_value: root.sl(*args)
    MDTextField:
        id:f_in
        hint_text: "Enter Expression"
        font_name_hint_text:"LPoppins"
        mode: "fill"
        text_color_normal:rgba(140,82,255,255)
        text_color_focus:rgba(140,82,255,255)
        line_color_normal:rgba(140,82,255,255)
        line_color_focus:rgba(140,82,255,255)
        fill_color_normal: 58/255,62/255,99/255,255/255
        fill_color_focus: 58/255,62/255,99/255,255/255
        hint_text_color_normal: rgba(140,82,255,255)
        hint_text_color_focus: rgba(140,82,255,255)
        pos_hint: {"center_x": .685, "center_y": .78}
        size_hint: .37, .08
        radius:[20,20,20,20]
        active_line: False
        icon_left: "function"
        icon_left_color_normal: "pink"
        icon_left_color_focus: "pink"
    MDTextField:
        id:a_in
        hint_text: "Enter Initial Approximation"
        size_hint_text:"50sp"
        font_name_hint_text:"LPoppins"
        mode: "fill"
        text_color_normal:rgba(140,82,255,255)
        text_color_focus:rgba(140,82,255,255)
        line_color_normal:rgba(140,82,255,255)
        line_color_focus:rgba(140,82,255,255)
        fill_color_normal: 58/255,62/255,99/255,255/255
        fill_color_focus: 58/255,62/255,99/255,255/255
        hint_text_color_normal: rgba(140,82,255,255)
        hint_text_color_focus: rgba(140,82,255,255)
        pos_hint: {"center_x": .685, "center_y": .65}
        size_hint: .37, .08
        radius:[20,20,20,20]
        active_line: False
        icon_left: "approximately-equal"
        icon_left_color_normal: "pink"
        icon_left_color_focus: "pink"
        
    MDLabel:
        text: "Tolerable Error"
        font_name: "SPoppins"
        font_size: "18sp"
        pos_hint: {"center_x": .547, "center_y": .55}
        halign: "center"
        color: rgba(140,82,255,255)
    MDFillRoundFlatButton:
        text :"Calculate"
        pos_hint: {"center_x": 0.68, "center_y": 0.42}
        font_size: "18sp"
        size_hint: .13, .065
        font_name: "SPoppins"
        md_bg_color: rgba(140,82,255,255)
        on_press:
            root.calc()
        
        
        
        
    


        

